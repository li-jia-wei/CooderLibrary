<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/refresh_area"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_marginBottom="2dp"
			android:gravity="center_horizontal|bottom">

			<ImageView
				android:id="@+id/dot1"
				android:layout_width="12dp"
				android:layout_height="12dp"
				android:layout_marginHorizontal="4dp"
				android:background="@drawable/ic_circle"
				android:backgroundTint="@color/cooder_lottie_wary_dot1" />

			<ImageView
				android:id="@+id/dot2"
				android:layout_width="12dp"
				android:layout_height="12dp"
				android:layout_marginHorizontal="4dp"
				android:background="@drawable/ic_circle"
				android:backgroundTint="@color/cooder_lottie_wary_dot2" />

			<ImageView
				android:id="@+id/dot3"
				android:layout_width="12dp"
				android:layout_height="12dp"
				android:layout_marginHorizontal="4dp"
				android:background="@drawable/ic_circle"
				android:backgroundTint="@color/cooder_lottie_wary_dot3" />

			<ImageView
				android:id="@+id/dot4"
				android:layout_width="12dp"
				android:layout_height="12dp"
				android:layout_marginHorizontal="4dp"
				android:background="@drawable/ic_circle"
				android:backgroundTint="@color/cooder_lottie_wary_dot4" />

			<ImageView
				android:id="@+id/dot5"
				android:layout_width="12dp"
				android:layout_height="12dp"
				android:layout_marginHorizontal="4dp"
				android:background="@drawable/ic_circle"
				android:backgroundTint="@color/cooder_lottie_wary_dot5" />

			<ImageView
				android:id="@+id/dot6"
				android:layout_width="12dp"
				android:layout_height="12dp"
				android:layout_marginHorizontal="4dp"
				android:background="@drawable/ic_circle"
				android:backgroundTint="@color/cooder_lottie_wary_dot6" />

			<ImageView
				android:id="@+id/dot7"
				android:layout_width="12dp"
				android:layout_height="12dp"
				android:layout_marginHorizontal="4dp"
				android:background="@drawable/ic_circle"
				android:backgroundTint="@color/cooder_lottie_wary_dot7" />

		</LinearLayout>

		<TextView
			android:id="@+id/tv_hint_line"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center"
			android:textColor="@color/primary"
			android:textSize="36sp" />

	</LinearLayout>

</merge>