<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="CoNavigationBarStyle">
		<item name="navIcon">@string/ic_left</item>
		<item name="navColor">@color/nav_color</item>
		
		<item name="btnTextSize">@dimen/sp_16</item>
		<item name="btnTextColor">@color/nav_btn_text_color</item>
		
		<item name="titleTextSize">@dimen/sp_18</item>
		<item name="titleTextSizeWithSub">@dimen/sp_16</item>
		<item name="titleTextColor">@color/nav_title_text_color</item>
		<item name="titleStyle">bold</item>
		
		<item name="subTitleTextSize">@dimen/sp_11</item>
		<item name="subTitleTextColor">@color/nav_sub_title_text_color</item>
		
		<item name="elementPadding">@dimen/dp_8</item>
		
		<item name="underlineHeight">@dimen/dp_3</item>
		<item name="underlineEnabled">true</item>
	</style>
	
	<style name="CoSearchViewStyle">
		<item name="searchBackground">@drawable/shape_search</item>
		<item name="searchHorizontal">@dimen/dp_14</item>
		<item name="searchVertical">@dimen/dp_10</item>
		<item name="searchChangeInterval">200</item>
		<item name="searchEnabled">true</item>
		
		<item name="textSize">@dimen/sp_16</item>
		<item name="textColor">@color/search_text_color</item>
		<item name="textMaxLength">200</item>
		
		<item name="navIcon">@string/ic_left</item>
		<item name="navIconSize">@dimen/sp_16</item>
		<item name="navColor">@color/search_nav_color</item>
		<item name="navPadding">@dimen/dp_8</item>
		<item name="navEnabled">true</item>
		
		<item name="hintIcon">@string/ic_search</item>
		<item name="hintIconSize">@dimen/sp_16</item>
		<item name="hintIconEnabled">true</item>
		<item name="hintText">@string/search_hint_text</item>
		<item name="hintTextSize">@dimen/sp_16</item>
		<item name="hintPadding">@dimen/dp_8</item>
		<item name="hintColor">@color/search_hint_color</item>
		<item name="hintGravity">center</item>
		
		<item name="clearIcon">@string/ic_close</item>
		<item name="clearSize">@dimen/sp_11</item>
		<item name="clearColor">@color/search_clear_color</item>
		<item name="clearPadding">@dimen/dp_8</item>
		<item name="clearEnabled">true</item>i
		
		<item name="confirmText">@string/search_confirm_text</item>
		<item name="confirmSize">@dimen/sp_16</item>
		<item name="confirmColor">@color/search_confirm_color</item>
		<item name="confirmPadding">@dimen/dp_8</item>
		<item name="confirmEnabled">true</item>
		
		<item name="keyWordTextSize">@dimen/sp_13</item>
		<item name="keyWordTextColor">@color/white</item>
		<item name="keyWordBackground">@drawable/shape_search_key_word</item>
		<item name="keyWordIcon">@string/ic_error</item>
		<item name="keyWordIconSize">@dimen/sp_13</item>
		<item name="keyWordMaxWidth">@dimen/dp_160</item>
		<item name="keyWordPadding">@dimen/dp_4</item>
		<item name="keyWordEllipsize">middle</item>
		<item name="keyWordEnabled">true</item>
	</style>
	
	<style name="CoAmountViewStyle">
		<item name="btnTextSize">@dimen/sp_16</item>
		<item name="btnTextColor">@color/amount_btn_color</item>
		<item name="btnSize">@dimen/dp_28</item>
		<item name="btnBackground">@color/amount_btn_bg</item>
		<item name="btnBoundaryBackground">@color/amount_btn_boundary_bg</item>
		
		<item name="amountTextSize">@dimen/sp_18</item>
		<item name="amountTextColor">@color/black</item>
		<item name="amountSize">@dimen/dp_28</item>
		<item name="amountBackground">@color/white</item>
		<item name="amountMargin">@dimen/dp_4</item>
		
		<item name="value">1</item>
		<item name="minValue">0</item>
	</style>
</resources>